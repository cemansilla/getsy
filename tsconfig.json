{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "outDir": "lib/esm",
    "sourceMap": true,
    "declaration": true,
    "pretty": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "files": [
    "./src/index.ts"
  ]
}
